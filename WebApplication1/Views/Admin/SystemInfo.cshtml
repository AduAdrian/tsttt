@model WebApplication1.Models.SystemInfoViewModel
@{
    ViewData["Title"] = "Control Panel - System Information";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="row">
    <div class="col-12">
        <h1 class="h3 mb-4">
            <i class="fas fa-info-circle"></i> Informa?ii Sistem
        </h1>
    </div>
</div>

<!-- Application Info Cards -->
<div class="row mb-4">
    <div class="col-xl-6 col-md-6 mb-4">
        <div class="card border-left-primary shadow h-100 py-2">
            <div class="card-body">
                <div class="row no-gutters align-items-center">
                    <div class="col mr-2">
                        <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">
                            Aplica?ia
                        </div>
                        <div class="h6 mb-0 font-weight-bold text-gray-800">@Model.ApplicationName</div>
                        <div class="text-xs text-muted">Versiunea @Model.Version</div>
                    </div>
                    <div class="col-auto">
                        <i class="fas fa-cogs fa-2x text-gray-300"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="col-xl-6 col-md-6 mb-4">
        <div class="card border-left-info shadow h-100 py-2">
            <div class="card-body">
                <div class="row no-gutters align-items-center">
                    <div class="col mr-2">
                        <div class="text-xs font-weight-bold text-info text-uppercase mb-1">
                            Mediu
                        </div>
                        <div class="h6 mb-0 font-weight-bold text-gray-800">@Model.Environment</div>
                    </div>
                    <div class="col-auto">
                        <i class="fas fa-server fa-2x text-gray-300"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Server Info Cards -->
<div class="row mb-4">
    <div class="col-xl-3 col-md-6 mb-4">
        <div class="card border-left-success shadow h-100 py-2">
            <div class="card-body">
                <div class="row no-gutters align-items-center">
                    <div class="col mr-2">
                        <div class="text-xs font-weight-bold text-success text-uppercase mb-1">
                            Server
                        </div>
                        <div class="h6 mb-0 font-weight-bold text-gray-800">@Model.MachineName</div>
                    </div>
                    <div class="col-auto">
                        <i class="fas fa-server fa-2x text-gray-300"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="col-xl-3 col-md-6 mb-4">
        <div class="card border-left-warning shadow h-100 py-2">
            <div class="card-body">
                <div class="row no-gutters align-items-center">
                    <div class="col mr-2">
                        <div class="text-xs font-weight-bold text-warning text-uppercase mb-1">
                            Procesoare
                        </div>
                        <div class="h6 mb-0 font-weight-bold text-gray-800">@Model.ProcessorCount</div>
                    </div>
                    <div class="col-auto">
                        <i class="fas fa-microchip fa-2x text-gray-300"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="col-xl-3 col-md-6 mb-4">
        <div class="card border-left-info shadow h-100 py-2">
            <div class="card-body">
                <div class="row no-gutters align-items-center">
                    <div class="col mr-2">
                        <div class="text-xs font-weight-bold text-info text-uppercase mb-1">
                            Memorie Utilizat?
                        </div>
                        <div class="h6 mb-0 font-weight-bold text-gray-800">@Model.WorkingSet MB</div>
                    </div>
                    <div class="col-auto">
                        <i class="fas fa-memory fa-2x text-gray-300"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="col-xl-3 col-md-6 mb-4">
        <div class="card border-left-primary shadow h-100 py-2">
            <div class="card-body">
                <div class="row no-gutters align-items-center">
                    <div class="col mr-2">
                        <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">
                            Timp Server
                        </div>
                        <div class="h6 mb-0 font-weight-bold text-gray-800">@Model.ServerTime.ToString("HH:mm:ss")</div>
                        <div class="text-xs text-muted">@Model.ServerTime.ToString("dd/MM/yyyy")</div>
                    </div>
                    <div class="col-auto">
                        <i class="fas fa-clock fa-2x text-gray-300"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Database Statistics -->
<div class="row mb-4">
    <div class="col-xl-6 col-md-6 mb-4">
        <div class="card border-left-success shadow h-100 py-2">
            <div class="card-body">
                <div class="row no-gutters align-items-center">
                    <div class="col mr-2">
                        <div class="text-xs font-weight-bold text-success text-uppercase mb-1">
                            Total Utilizatori
                        </div>
                        <div class="h5 mb-0 font-weight-bold text-gray-800">@Model.TotalUsers</div>
                    </div>
                    <div class="col-auto">
                        <i class="fas fa-users fa-2x text-gray-300"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="col-xl-6 col-md-6 mb-4">
        <div class="card border-left-info shadow h-100 py-2">
            <div class="card-body">
                <div class="row no-gutters align-items-center">
                    <div class="col mr-2">
                        <div class="text-xs font-weight-bold text-info text-uppercase mb-1">
                            Total Program?ri
                        </div>
                        <div class="h5 mb-0 font-weight-bold text-gray-800">@Model.TotalAppointments</div>
                    </div>
                    <div class="col-auto">
                        <i class="fas fa-calendar-alt fa-2x text-gray-300"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Detailed Information -->
<div class="row">
    <div class="col-lg-12">
        <div class="card shadow mb-4">
            <div class="card-header py-3">
                <h6 class="m-0 font-weight-bold text-primary">
                    <i class="fas fa-info-circle"></i> Detalii Sistem
                </h6>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-bordered">
                        <tbody>
                            <tr>
                                <th class="bg-light" style="width: 30%;">Nume Aplica?ie</th>
                                <td>@Model.ApplicationName</td>
                            </tr>
                            <tr>
                                <th class="bg-light">Versiune</th>
                                <td>@Model.Version</td>
                            </tr>
                            <tr>
                                <th class="bg-light">Mediu</th>
                                <td>
                                    <span class="badge @(Model.Environment == "Production" ? "bg-success" : "bg-warning")">
                                        @Model.Environment
                                    </span>
                                </td>
                            </tr>
                            <tr>
                                <th class="bg-light">Server</th>
                                <td>@Model.MachineName</td>
                            </tr>
                            <tr>
                                <th class="bg-light">Num?rul de Procesoare</th>
                                <td>@Model.ProcessorCount</td>
                            </tr>
                            <tr>
                                <th class="bg-light">Memorie Utilizat?</th>
                                <td>@Model.WorkingSet MB</td>
                            </tr>
                            <tr>
                                <th class="bg-light">Timp Server</th>
                                <td>@Model.ServerTime.ToString("dddd, dd MMMM yyyy HH:mm:ss", new System.Globalization.CultureInfo("ro-RO"))</td>
                            </tr>
                            <tr>
                                <th class="bg-light">Framework</th>
                                <td>.NET 8.0</td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Quick Actions -->
<div class="row">
    <div class="col-lg-12">
        <div class="card shadow mb-4">
            <div class="card-header py-3">
                <h6 class="m-0 font-weight-bold text-primary">
                    <i class="fas fa-tools"></i> Ac?iuni Rapide
                </h6>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-3 mb-3">
                        <a href="/Admin/Dashboard" class="btn btn-outline-primary btn-block">
                            <i class="fas fa-tachometer-alt"></i><br>
                            Înapoi la Dashboard
                        </a>
                    </div>
                    <div class="col-md-3 mb-3">
                        <a href="/Admin/Users" class="btn btn-outline-success btn-block">
                            <i class="fas fa-users"></i><br>
                            Vezi Utilizatori
                        </a>
                    </div>
                    <div class="col-md-3 mb-3">
                        <a href="/Test/TestEmail" class="btn btn-outline-info btn-block">
                            <i class="fas fa-envelope"></i><br>
                            Test Email
                        </a>
                    </div>
                    <div class="col-md-3 mb-3">
                        <a href="/Test/TestSms" class="btn btn-outline-warning btn-block">
                            <i class="fas fa-sms"></i><br>
                            Test SMS
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>