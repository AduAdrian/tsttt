</style>

<script>
    document.addEventListener('DOMContentLoaded', function() {
        // Enhanced navigation tracking
        document.querySelectorAll('a').forEach(link => {
            link.addEventListener('click', function(e) {
                const href = this.getAttribute('href');
                const text = this.textContent.trim();
                console.log(`Dashboard Navigation: ${text} -> ${href}`);
                
                // Track quick navigation usage
                if (this.classList.contains('quick-nav-btn')) {
                    console.log(`Quick Navigation Used: ${text}`);
                }
            });
        });
        
        // System health check simulation
        setTimeout(() => {
            console.log('Dashboard loaded - System health check completed');
        }, 1000);
        
        // Add tooltip to system status indicators
        const statusCards = document.querySelectorAll('.border-left-primary, .border-left-success, .border-left-warning, .border-left-info');
        statusCards.forEach(card => {
            card.setAttribute('data-bs-toggle', 'tooltip');
            card.setAttribute('data-bs-placement', 'top');
            card.setAttribute('title', 'Click pentru detalii');
        });
        
        // Initialize Bootstrap tooltips if available
        if (typeof bootstrap !== 'undefined') {
            const tooltipTriggerList = [].slice.call(document.querySelectorAll('[data-bs-toggle="tooltip"]'));
            tooltipTriggerList.map(function (tooltipTriggerEl) {
                return new bootstrap.Tooltip(tooltipTriggerEl);
            });
        }
    });
</script>