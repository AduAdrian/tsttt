@{
    ViewData["Title"] = "Test SMS";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="main-header">
    <div class="company-name">
        Miseda Inspect SRL
    </div>
    <div class="subtitle">
        Test SMS
    </div>
</div>

<div class="content-wrapper">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title text-center mb-4">Test Serviciu SMS</h4>
                    
                    @if (!string.IsNullOrEmpty(ViewBag.Message))
                    {
                        <div class="alert alert-success" role="alert">
                            <strong>Succes!</strong> @ViewBag.Message
                        </div>
                    }
                    
                    @if (!string.IsNullOrEmpty(ViewBag.Error))
                    {
                        <div class="alert alert-danger" role="alert">
                            <strong>Eroare!</strong> @ViewBag.Error
                        </div>
                    }
                    
                    <form method="post" action="/Test/TestSms">
                        <div class="mb-3">
                            <label for="testPhone" class="form-label">Numar de telefon pentru test</label>
                            <input type="tel" class="form-control" id="testPhone" name="testPhone" 
                                   placeholder="Ex: 0712345678" required>
                            <div class="form-text">Va fi trimis un SMS de test la acest numar.</div>
                        </div>
                        
                        <div class="d-grid">
                            <button type="submit" class="btn btn-primary">Trimite SMS de Test</button>
                        </div>
                    </form>
                    
                    <hr class="my-4">
                    
                    <div class="text-center">
                        <p class="text-muted">
                            Aceasta pagina este pentru testarea serviciului SMS cu API:
                            <br><strong>smsadvert.ro</strong>
                        </p>
                        <div class="row">
                            <div class="col-6">
                                <a href="/Test/TestEmail" class="btn btn-secondary">Test Email</a>
                            </div>
                            <div class="col-6">
                                <a href="/Home" class="btn btn-secondary">Inapoi la Home</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>