@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Anima?ii pentru carduri
            const cards = document.querySelectorAll('.card');
            cards.forEach((card, index) => {
                card.style.opacity = '0';
                card.style.transform = 'translateY(30px)';
                
                setTimeout(() => {
                    card.style.transition = 'all 0.6s ease';
                    card.style.opacity = '1';
                    card.style.transform = 'translateY(0)';
                }, index * 150);
            });

            // Hover effects pentru butoane
            document.querySelectorAll('.btn').forEach(btn => {
                btn.addEventListener('mouseenter', function() {
                    if (!this.classList.contains('btn-outline-light')) {
                        this.style.transform = 'translateY(-3px)';
                        this.style.boxShadow = '0 6px 12px rgba(0,0,0,0.2)';
                    }
                });
                
                btn.addEventListener('mouseleave', function() {
                    this.style.transform = 'translateY(0)';
                    this.style.boxShadow = '';
                });
            });

            // Copy functionality pentru formule
            document.querySelectorAll('code').forEach(codeBlock => {
                codeBlock.style.cursor = 'pointer';
                codeBlock.title = 'Click pentru a copia';
                
                codeBlock.addEventListener('click', function() {
                    const text = this.textContent;
                    navigator.clipboard.writeText(text).then(() => {
                        const originalBg = this.style.backgroundColor;
                        this.style.backgroundColor = '#d4edda';
                        this.style.color = '#155724';
                        
                        setTimeout(() => {
                            this.style.backgroundColor = originalBg;
                            this.style.color = '';
                        }, 1500);
                    });
                });
            });

            console.log('?? Informa?ii Template Excel loaded successfully');
            console.log('?? Miseda Inspect SRL - Template Automatizat');
        });
    </script>

    <style>
        .card {
