@{
    ViewData["Title"] = "Parola Resetata";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="main-header">
    <div class="company-name">
        Miseda Inspect SRL
    </div>
    <div class="subtitle">
        Succes
    </div>
</div>

<div class="content-wrapper">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card border-success">
                <div class="card-body text-center">
                    <div style="font-size: 4rem; color: #28a745; margin-bottom: 20px;">
                        ?
                    </div>
                    
                    <h4 class="card-title text-success mb-4">Parola resetata cu succes!</h4>
                    
                    @if (!string.IsNullOrEmpty(ViewBag.Username))
                    {
                        <p class="mb-4">
                            Parola pentru contul <strong>@ViewBag.Username</strong> a fost schimbata cu succes.
                        </p>
                        
                        <p class="mb-4">
                            Acum te poti conecta cu username-ul <strong>@ViewBag.Username</strong> si noua parola.
                        </p>
                    }
                    else
                    {
                        <p class="mb-4">
                            Parola ta a fost schimbata cu succes. 
                            Acum te poti conecta cu noua parola.
                        </p>
                    }
                    
                    <div class="d-grid">
                        <a href="/Account/Login" class="btn btn-success">
                            Conecteaza-te Acum
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>