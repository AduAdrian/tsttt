@{
    ViewData["Title"] = "Parola Uitata";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="main-header">
    <div class="company-name">
        Miseda Inspect SRL
    </div>
    <div class="subtitle">
        Recuperare Parola
    </div>
</div>

<div class="content-wrapper">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title text-center mb-4">Am uitat parola</h4>
                    <p class="text-center text-muted mb-4">
                        Introdu adresa de email pentru recuperarea parolei
                    </p>
                    
                    @if (!string.IsNullOrEmpty(ViewBag.Message))
                    {
                        <div class="alert alert-success" role="alert">
                            @ViewBag.Message
                        </div>
                    }
                    
                    @if (!string.IsNullOrEmpty(ViewBag.Error))
                    {
                        <div class="alert alert-danger" role="alert">
                            @ViewBag.Error
                        </div>
                    }
                    
                    <form method="post" action="/Account/ForgotPassword">
                        <div asp-validation-summary="All" class="text-danger mb-3"></div>
                        
                        <div class="mb-3">
                            <label for="email" class="form-label">Email</label>
                            <input type="email" class="form-control" id="email" name="email" required>
                        </div>
                        
                        <div class="d-grid">
                            <button type="submit" class="btn btn-warning">Trimite Link de Recuperare</button>
                        </div>
                    </form>
                    
                    <div class="text-center mt-3">
                        <a href="/Account/Login" class="text-decoration-none">Inapoi la conectare</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>