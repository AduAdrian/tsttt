@{
    ViewData["Title"] = "Recuperare prin SMS";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="main-header">
    <div class="company-name">
        Miseda Inspect SRL
    </div>
    <div class="subtitle">
        Recuperare prin SMS
    </div>
</div>

<div class="content-wrapper">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title text-center mb-4">Recuperare prin SMS</h4>
                    <p class="text-center text-muted mb-4">
                        Introdu numarul de telefon pentru a primi codul de resetare
                    </p>
                    
                    @if (!string.IsNullOrEmpty(ViewBag.Message))
                    {
                        <div class="alert alert-success" role="alert">
                            @ViewBag.Message
                        </div>
                    }
                    
                    @if (!string.IsNullOrEmpty(ViewBag.Error))
                    {
                        <div class="alert alert-danger" role="alert">
                            @ViewBag.Error
                        </div>
                    }
                    
                    <form method="post" action="/Account/ForgotPasswordSms">
                        <div asp-validation-summary="All" class="text-danger mb-3"></div>
                        
                        <div class="mb-3">
                            <label for="phoneNumber" class="form-label">Numarul de Telefon</label>
                            <input type="tel" class="form-control" id="phoneNumber" name="phoneNumber" 
                                   placeholder="Ex: 0712345678" required>
                            <div class="form-text">Numarul de telefon asociat cu contul tau.</div>
                        </div>
                        
                        <div class="d-grid">
                            <button type="submit" class="btn btn-warning">Trimite Cod SMS</button>
                        </div>
                    </form>
                    
                    <div class="text-center mt-3">
                        <a href="/Account/ForgotPassword" class="text-decoration-none">Recuperare prin email</a>
                    </div>
                    
                    <div class="text-center mt-2">
                        <a href="/Account/Login" class="text-decoration-none">Inapoi la conectare</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>