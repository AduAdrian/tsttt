@{
    ViewData["Title"] = "Resetare Parola";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="main-header">
    <div class="company-name">
        Miseda Inspect SRL
    </div>
    <div class="subtitle">
        Resetare Parola
    </div>
</div>

<div class="content-wrapper">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title text-center mb-4">Introdu parola noua</h4>
                    <p class="text-center text-muted mb-4">
                        Alege o parola puternica pentru contul tau
                    </p>
                    
                    <form method="post" action="/Account/ResetPassword">
                        <input type="hidden" name="token" value="@ViewBag.Token" />
                        <input type="hidden" name="email" value="@ViewBag.Email" />
                        
                        <div asp-validation-summary="All" class="text-danger mb-3"></div>
                        
                        <div class="mb-3">
                            <label for="email" class="form-label">Email</label>
                            <input type="email" class="form-control" id="email" value="@ViewBag.Email" disabled>
                        </div>
                        
                        <div class="mb-3">
                            <label for="password" class="form-label">Parola Noua</label>
                            <input type="password" class="form-control" id="password" name="password" required>
                            <div class="form-text">Parola trebuie sa aiba cel putin 6 caractere si sa contina cel putin o cifra.</div>
                        </div>
                        
                        <div class="mb-3">
                            <label for="confirmPassword" class="form-label">Confirma Parola Noua</label>
                            <input type="password" class="form-control" id="confirmPassword" name="confirmPassword" required>
                        </div>
                        
                        <div class="d-grid">
                            <button type="submit" class="btn btn-success">Reseteaza Parola</button>
                        </div>
                    </form>
                    
                    <div class="text-center mt-3">
                        <a href="/Account/Login" class="text-decoration-none">Inapoi la conectare</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>