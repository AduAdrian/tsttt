<!DOCTYPE html>
<html lang="ro">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Miseda Inspect SRL Admin</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    <style>
        :root {
            --primary-color: #667eea;
            --secondary-color: #764ba2;
            --sidebar-width: 250px;
        }

        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background-color: #f8f9fc;
        }

        .sidebar {
            position: fixed;
            top: 0;
            left: 0;
            height: 100vh;
            width: var(--sidebar-width);
            background: linear-gradient(135deg, var(--primary-color) 0%, var(--secondary-color) 100%);
            padding: 0;
            z-index: 1000;
            overflow-y: auto;
        }

        .sidebar .sidebar-brand {
            padding: 1.5rem 1rem;
            text-align: center;
            color: white;
            text-decoration: none;
            border-bottom: 1px solid rgba(255,255,255,0.2);
        }

        .sidebar .sidebar-brand:hover {
            color: white;
            text-decoration: none;
        }

        .sidebar-nav {
            list-style: none;
            padding: 0;
            margin: 0;
        }

        .sidebar-nav li {
            margin: 0;
        }

        .sidebar-nav a {
            display: block;
            padding: 1rem 1.5rem;
            color: rgba(255,255,255,0.8);
            text-decoration: none;
            transition: all 0.3s;
            border-left: 3px solid transparent;
        }

        .sidebar-nav a:hover, .sidebar-nav a.active {
            color: white;
            background-color: rgba(255,255,255,0.1);
            border-left-color: white;
        }

        .sidebar-nav i {
            width: 20px;
            margin-right: 10px;
        }

        .main-content {
            margin-left: var(--sidebar-width);
            min-height: 100vh;
        }

        .topbar {
            background: white;
            padding: 1rem 2rem;
            box-shadow: 0 0.15rem 1.75rem 0 rgba(58, 59, 69, 0.15);
            margin-bottom: 2rem;
        }

        .content {
            padding: 0 2rem 2rem;
        }

        .card {
            border: none;
            border-radius: 0.35rem;
            box-shadow: 0 0.15rem 1.75rem 0 rgba(58, 59, 69, 0.15);
        }

        .border-left-primary {
            border-left: 0.25rem solid #4e73df !important;
        }

        .border-left-success {
            border-left: 0.25rem solid #1cc88a !important;
        }

        .border-left-warning {
            border-left: 0.25rem solid #f6c23e !important;
        }

        .border-left-info {
            border-left: 0.25rem solid #36b9cc !important;
        }

        .text-primary {
            color: #5a5c69 !important;
        }

        .text-gray-800 {
            color: #5a5c69 !important;
        }

        .text-gray-300 {
            color: #dddfeb !important;
        }

        .badge-success {
            background-color: #1cc88a !important;
        }

        .badge-warning {
            background-color: #f6c23e !important;
        }

        .btn-outline-primary:hover,
        .btn-outline-info:hover,
        .btn-outline-success:hover,
        .btn-outline-warning:hover {
            transform: translateY(-2px);
            box-shadow: 0 4px 8px rgba(0,0,0,0.1);
        }

        /* Responsive */
        @@media (max-width: 768px) {
            .sidebar {
                margin-left: calc(var(--sidebar-width) * -1);
            }
            
            .main-content {
                margin-left: 0;
            }
            
            .sidebar.show {
                margin-left: 0;
            }
        }

        .admin-header {
            background: linear-gradient(135deg, var(--primary-color) 0%, var(--secondary-color) 100%);
            color: white;
            margin: -2rem -2rem 2rem -2rem;
            padding: 2rem;
            border-radius: 0 0 1rem 1rem;
        }

        .quick-action-card {
            transition: all 0.3s;
            cursor: pointer;
        }

        .quick-action-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 10px 25px rgba(0,0,0,0.1);
        }
    </style>
</head>
<body>
    <!-- Sidebar -->
    <div class="sidebar">
        <a class="sidebar-brand" href="/Admin/Dashboard">
            <div class="sidebar-brand-icon">
                <i class="fas fa-cogs"></i>
            </div>
            <div class="sidebar-brand-text mx-3">
                <strong>Control Panel</strong><br>
                <small>Miseda Inspect</small>
            </div>
        </a>

        <ul class="sidebar-nav">
            <li>
                <a href="/Admin/Dashboard" data-section="admin">
                    <i class="fas fa-tachometer-alt"></i>
                    <span>Dashboard</span>
                </a>
            </li>
            <li>
                <a href="/Admin/Users" data-section="admin">
                    <i class="fas fa-users"></i>
                    <span>Utilizatori</span>
                </a>
            </li>
            <li>
                <a href="/Notifications/Dashboard" data-section="notifications">
                    <i class="fas fa-bell"></i>
                    <span>Notific?ri ITP</span>
                </a>
            </li>
            <li>
                <a href="/Appointments" data-section="appointments">
                    <i class="fas fa-calendar-alt"></i>
                    <span>Program?ri</span>
                </a>
            </li>
            <li>
                <a href="/Clients" data-section="clients">
                    <i class="fas fa-car"></i>
                    <span>Clien?i ITP</span>
                </a>
            </li>
            <li>
                <a href="/Admin/SystemInfo" data-section="admin">
                    <i class="fas fa-info-circle"></i>
                    <span>Informatii Sistem</span>
                </a>
            </li>
            <li>
                <hr style="border-color: rgba(255,255,255,0.2); margin: 1rem 1.5rem;">
            </li>
            <li>
                <a href="/Test/TestEmail" data-section="test">
                    <i class="fas fa-envelope"></i>
                    <span>Test Email</span>
                </a>
            </li>
            <li>
                <a href="/Test/TestSms" data-section="test">
                    <i class="fas fa-sms"></i>
                    <span>Test SMS</span>
                </a>
            </li>
            <li>
                <hr style="border-color: rgba(255,255,255,0.2); margin: 1rem 1.5rem;">
            </li>
            <li>
                <a href="/Home" data-section="home">
                    <i class="fas fa-home"></i>
                    <span>Inapoi la Site</span>
                </a>
            </li>
            <li>
                <form method="post" action="/Account/Logout" style="margin: 0;">
                    <a href="javascript:void(0)" onclick="this.closest('form').submit()">
                        <i class="fas fa-sign-out-alt"></i>
                        <span>Deconectare</span>
                    </a>
                </form>
            </li>
        </ul>
    </div>

    <!-- Main Content -->
    <div class="main-content">
        <!-- Top Bar -->
        <div class="topbar">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <button class="btn btn-link d-md-none" id="sidebarToggle">
                        <i class="fas fa-bars"></i>
                    </button>
                </div>
                <div class="topbar-right">
                    <span class="text-muted">
                        <i class="fas fa-user"></i>
                        Administrator: <strong>@User.Identity?.Name</strong>
                    </span>
                </div>
            </div>
        </div>

        <!-- Page Content -->
        <div class="content">
            @RenderBody()
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        // Sidebar toggle pentru mobile
        document.getElementById('sidebarToggle')?.addEventListener('click', function() {
            document.querySelector('.sidebar').classList.toggle('show');
        });

        // Improved active link highlighting
        function setActiveNavLink() {
            const currentPath = window.location.pathname.toLowerCase();
            const navLinks = document.querySelectorAll('.sidebar-nav a[data-section]');
            
            // Remove all active classes first
            navLinks.forEach(link => link.classList.remove('active'));
            
            // Determine which section we're in based on URL patterns
            let activeSection = null;
            
            if (currentPath.startsWith('/admin/')) {
                activeSection = 'admin';
            } else if (currentPath.startsWith('/notifications/')) {
                activeSection = 'notifications';
            } else if (currentPath.startsWith('/appointments/')) {
                activeSection = 'appointments';
            } else if (currentPath.startsWith('/clients/')) {
                activeSection = 'clients';
            } else if (currentPath.startsWith('/test/')) {
                activeSection = 'test';
            } else if (currentPath.startsWith('/home') || currentPath === '/') {
                activeSection = 'home';
            }
            
            // If we identified a section, mark the appropriate link as active
            if (activeSection) {
                // For exact path matches first
                navLinks.forEach(link => {
                    if (link.getAttribute('href').toLowerCase() === currentPath) {
                        link.classList.add('active');
                        return;
                    }
                });
                
                // If no exact match found, use section matching
                const hasExactMatch = Array.from(navLinks).some(link => link.classList.contains('active'));
                if (!hasExactMatch) {
                    navLinks.forEach(link => {
                        if (link.getAttribute('data-section') === activeSection) {
                            // For admin section, prioritize the most specific match
                            if (activeSection === 'admin') {
                                if (currentPath.includes('/systeminfo') && link.getAttribute('href').toLowerCase().includes('/systeminfo')) {
                                    link.classList.add('active');
                                } else if (currentPath.includes('/users') && link.getAttribute('href').toLowerCase().includes('/users')) {
                                    link.classList.add('active');
                                } else if (currentPath.includes('/dashboard') && link.getAttribute('href').toLowerCase().includes('/dashboard')) {
                                    link.classList.add('active');
                                } else if (!currentPath.includes('/systeminfo') && !currentPath.includes('/users') && link.getAttribute('href').toLowerCase().includes('/dashboard')) {
                                    link.classList.add('active');
                                }
                            } else {
                                // For other sections, just mark the first matching section
                                if (!Array.from(navLinks).some(l => l.classList.contains('active'))) {
                                    link.classList.add('active');
                                }
                            }
                        }
                    });
                }
            }
        }
        
        // Set active link on page load
        document.addEventListener('DOMContentLoaded', setActiveNavLink);
    </script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>