@{
    ViewData["Title"] = "Acasa";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="main-header">
    <div class="login-nav">
        @if (User.Identity?.IsAuthenticated == true)
        {
            <span style="color: white; margin-right: 10px;">Buna, @User.Identity.Name!</span>
            <form method="post" action="/Account/Logout" style="display: inline;">
                <button type="submit" class="btn btn-sm btn-outline-light">Deconectare</button>
            </form>
        }
        else
        {
            <a href="/Account/Login">Conectare</a>
        }
    </div>
    <div class="company-name">
        Miseda Inspect SRL
    </div>
    <div class="subtitle">
        Notificari Clienti
    </div>
</div>

<div class="content-wrapper">
    <div class="row">
        <div class="col-md-12">
            <h2 class="text-center mb-4">Bine ati venit!</h2>
            <p class="lead text-center">
                Platforma pentru gestionarea notificarilor clientilor Miseda Inspect SRL
            </p>
        </div>
    </div>
    
    <div class="row mt-5">
        <div class="col-md-4">
            <div class="card h-100">
                <div class="card-body text-center">
                    <h5 class="card-title">Notificari</h5>
                    <p class="card-text">Gestioneaza si trimite notificari catre clienti</p>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card h-100">
                <div class="card-body text-center">
                    <h5 class="card-title">Clienti</h5>
                    <p class="card-text">Administreaza baza de date cu clientii</p>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card h-100">
                <div class="card-body text-center">
                    <h5 class="card-title">Rapoarte</h5>
                    <p class="card-text">Vizualizeaza statistici si rapoarte</p>
                </div>
            </div>
        </div>
    </div>
</div>